{
  "name": "chriswiegman-theme",
  "description": "Minimal and sustainable WordPress theme for ChrisWiegman.com.",
  "repository": {
    "type": "git",
    "url": "https://gitea.chriswiegman.com/chriswiegman/chriswiegman-theme"
  },
  "author": "Chris Wiegman <contact@chriswiegman.com>",
  "license": "GPLv3",
  "homepage": "https://chriswiegman.com/",
  "devDependencies": {
    "clean-css-cli": "^5.6.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "node-sass": "^7.0.1",
    "prettier": "^2.7.1"
  },
  "watch": {
    "build-assets": {
      "patterns": [
        "assets"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "clean-maps": "rm -f ./assets/*.map",
    "watch-sass": "node-sass ./assets/scss/main.scss -o ./assets/main.css --watch",
    "compile-main": "node-sass --output-style expanded --source-map true --source-map-contents true ./assets/scss/main.scss ./assets/main.css",
    "minify-main": "cleancss -O2 --output ./assets/main.min.css ./assets/main.css",
    "compile-editor": "node-sass --output-style expanded --source-map true --source-map-contents true ./assets/scss/editor.scss ./assets/editor.css",
    "minify-editor": "cleancss -O2 --output ./assets/editor.min.css ./assets/editor.css",
    "build-assets": "npm run clean-maps && npm run compile-main && npm run compile-editor && npm run minify-main && npm run minify-editor",
    "watch": "npm-watch build-assets"
  }
}
